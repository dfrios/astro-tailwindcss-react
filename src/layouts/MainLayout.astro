---
import "@/styles/styles.css";

import MetaPixelHead from "@/components/base/MetaPixelHead.astro";
import MetaPixelBody from "@/components/base/MetaPixelBody.astro";
import GoogleTagManagerHead from "@/components/base/GoogleTagManagerHead.astro";
import GoogleTagManagerBody from "@/components/base/GoogleTagManagerBody.astro";
import OpenGraph from "@/components/base/OpenGraph.astro";

const constants = await import(`../data/constants-${Astro.currentLocale}.json`, {assert: { type: "json"}});
---

<!DOCTYPE html>
<html lang={Astro.currentLocale} class="scroll-smooth" dir="ltr">
	<head>
		<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href=`${constants.url}/favicon.png` />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />

		<title>{constants.title}</title>

		<GoogleTagManagerHead />
		<MetaPixelHead />
		<OpenGraph />

	</head>
	<body class="">

		<GoogleTagManagerBody />
		<MetaPixelBody />

    <slot />

	</body>

	<script src="../scripts/scripts.ts"></script>
</html>
